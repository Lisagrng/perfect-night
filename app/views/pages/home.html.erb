<% if user_signed_in? %>

  <div class="container">
  <div class="body">
    <br>
    <h1>Perfect Night</h1>
    <br>
      <br>
      <div class="text-center">
        <button class="button-home"><i class="fa-solid fa-magnifying-glass"></i>
            <%= link_to "Choisir mon activité", index_filtre_path %>
        </button>
      </div>
      <br>

      <h2 class="title"> Evènements populaires </h2>
      <br>
      <div class="description">
        <h2> Laisse-toi guider ! </h2>
          <p> Visite nos différentes propositions d'activitées pour ta <span style="color: #FF8B13;"><strong>soirée parfaite</strong></span> ou laisse-toi guider ! </p>
      </div>

      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-inner">
          <% @activities.each_with_index do |activity, index| %>
            <% if index == 0 %>
              <div class="carousel-item active">
                <%= cl_image_tag activity.photo.key, width: 400, height: 400, crop: :fill, class: "d-block w-100", alt: activity.name %>
                <div class="carousel-caption d-block">
                    <span style="color: white;"><strong><%= activity.name %></span></strong>
                </div>
              </div>
            <% else %>
              <div class="carousel-item">
                <%= cl_image_tag activity.photo.key, width: 400, height: 400, crop: :fill, class: "d-block w-100", alt: activity.name %>
                <div class="carousel-caption d-block">
                  <span style="color: white;"><strong><%= activity.name %></span></strong>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <br>
  </div>
</div>
<% end %>
