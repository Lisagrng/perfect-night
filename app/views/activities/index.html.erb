<% if user_signed_in? %>
  <div class="container">
    <div class="cards">
    <% @activities.each do |activity| %>
      <div class="card">
        <%= cl_image_tag activity.photo.key, crop: :fill, class: "d-block w-100", alt: activity.name %>
        <h4><%= link_to activity.name, activities_path(activity) %></h4>
        <p><%= activity.open_at %> - <%= activity.close_at %></p>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
