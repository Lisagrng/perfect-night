<div class= "logo">
  <%= image_tag("logo.png")%>
</div>
<div class="element">
  <%= form_tag(activities_path, method: :get) do %>
    <div class="filtre">
      <div>
        <%= label_tag :Nombre_de_personne %>
        <%= select_tag :Nombre_de_personne, options_for_select([["1 personne", 1], ["2 personnes", 2], ["3 personnes", 3], ["4 personnes", 4], ["5 personnes", 5], ["6 personnes", 6], ["7 personnes", 7], ["8 personnes", 8], ["9 personnes", 9], ["10 personnes", 10], ["11 personnes", 11]]) %>
      </div>
      <br>
      <div>
        <%= label_tag :ville %>
        <%= text_field_tag :ville %>
      </div>
      <br>
      <div>
        <%= label_tag :Categorie %>
        <%= text_field_tag :Categorie %>
      </div>
      <br>
      <div>
        <%= submit_tag "Filtrer" %>
      </div>
    </div>
  <% end %>
</div>
